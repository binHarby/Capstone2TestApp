<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightDark"
    tools:context=".Signup2cont">

    <ImageView
        android:id="@+id/signup2Img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/signup_faded_bg" />
    <TextView
        android:id="@+id/signup2Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="190dp"
        android:layout_marginStart="38dp"
        android:textAllCaps="false"
        android:textColor="@color/pink"
        android:textSize="48sp"
        android:textStyle="bold"
        android:text="@string/signup_title"
        app:layout_constraintStart_toStartOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/signup2Cardview"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/signup2Title"
        app:cardElevation="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup2Height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/baseline_height_24"
                app:startIconContentDescription="@string/signup2_height_hint"
                android:hint="@string/signup2_height_hint"
                style="@style/Widget.Capstone2Test.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup2Weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signup2Height"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/baseline_scale_24"
                app:startIconContentDescription="@string/signup2_weight_hint"
                android:hint="@string/signup2_weight_hint"
                style="@style/Widget.Capstone2Test.TextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:inputType="numberDecimal"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup2Bloodtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@android:color/transparent"
                android:layout_below="@+id/signup2Weight"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/baseline_bloodtype_24"
                app:startIconContentDescription="@string/signup2_bloodtype_hint"
                android:hint="@string/signup2_bloodtype_hint"
                style="@style/Widget.Capstone2Test.ExposedDropdownMenu"
                >

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:inputType="none"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/signup2ActivityLvl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxBackgroundColor="@android:color/transparent"
                android:layout_below="@+id/signup2Bloodtype"
                android:layout_marginTop="10dp"
                app:startIconDrawable="@drawable/baseline_bolt_24"
                app:startIconContentDescription="@string/signup2_activity_hint"
                android:hint="@string/signup2_activity_hint"

                style="@style/Widget.Capstone2Test.ExposedDropdownMenu"
                >

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:inputType="none"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <android.widget.Button
        android:id="@+id/signup2Btn"
        android:layout_width="363dp"
        android:layout_height="52dp"
        android:layout_marginBottom="224dp"
        android:background="@drawable/gradient_pink_button_bg"
        android:backgroundTint="@null"
        android:text="@string/signup_btn_cont"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/signup2Cardview"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>