<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capstone2Test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--custom styling material io stuff -->
        <item name="textInputStyle">@style/Widget.Capstone2Test.TextInputLayout</item>
        <item name="popupMenuStyle">@style/Widget.Capstone2Test.ExposedDropdownMenu</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- TextFields Themeing?-->

    <style name="Widget.Capstone2Test.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Capstone2Test.TextInputLayout</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.Capstone2Test.TextInputLayout" parent="">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorOnSurface">@color/pink</item>
    </style>
    <style name="Widget.Capstone2Test.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Capstone2Test.ExposedDropdownMenu</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="endIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.Capstone2Test.ExposedDropdownMenu" parent="">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorOnSurface">@color/pink</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Capstone2Test.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Capstone2Test.Caption</item>
    </style>

    <style name="TextAppearance.Capstone2Test.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/akaya_telivigala</item>
        <item name="android:fontFamily">@font/akaya_telivigala</item>
    </style>

    <style name="TextAppearance.Capstone2Test.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/alfa_slab_one</item>
        <item name="android:fontFamily">@font/alfa_slab_one</item>
    </style>
    <style name="ActionBarThemeOverlay">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/pink</item>
        <item name="android:textColorHint">@color/lightGrey</item>
    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>